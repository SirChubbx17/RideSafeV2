<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20sp">


    <TextView
        android:id="@+id/current_txt_list"
        android:layout_width="160dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Current Location:"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_txt"
        android:layout_width="63dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/current_txt_list"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Loc:" />

    <TextView
        android:id="@+id/destination_txt_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Destination location"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_txt_list" />

    <TextView
        android:id="@+id/destination_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/destination_txt_list"
        app:layout_constraintTop_toBottomOf="@+id/current_txt_list"
        tools:text="Loc:" />

</androidx.constraintlayout.widget.ConstraintLayout>